<h2>Editing book</h2>
<%= form_with model: @book, url:update_book_path(@book.id), method: :patch do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

  <%= link_to "Show", "/books/#{@book.id}" %>
  <p>|</p>
  <%= link_to "Edit", edit_book_path(@book.id) %>
  <p>|</p>
  <%= link_to "Back", books_path %>

  <% end %>
